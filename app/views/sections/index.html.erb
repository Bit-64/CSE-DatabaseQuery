<h1>Listing sections</h1>

<table>
  <thead>
    <tr>
      <th>Course registration number</th>
      <th>Faculty</th>
      <th>Course</th>
      <th>Semester</th>
      <th>Year offered</th>
      <th>Section</th>
      <th>Student</th>
      <th>Academic progress</th>
      <th>Grade</th>
      <th>Quiz score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.course_registration_number %></td>
        <td><%= section.faculty %></td>
        <td><%= section.course %></td>
        <td><%= section.semester %></td>
        <td><%= section.year_offered %></td>
        <td><%= section.section %></td>
        <td><%= section.student %></td>
        <td><%= section.academic_progress %></td>
        <td><%= section.grade %></td>
        <td><%= section.quiz_score %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

