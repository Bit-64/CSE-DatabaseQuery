
<h1>Listing answers</h1>


<script type="text/javascript" charset="UTF-8">
$(function () { 
    $('#container').highcharts({
        chart: {
            type: 'bar'
        },
        title: {
            text: 'Answered Correctly'
        },
        xAxis: {
            categories: ['CS 3100 Answers']
        },
        yAxis: {
            title: {
                text: 'Fruit eaten'
            }
        },
        series: [{
            name: 'Right',
            data: [<%=@correct.number%>]
        }, {
            name: 'Wrong',
            data: [<%=@incorrect.number%>]
        }]
    });
});
</script>

<div id="container" style="width:100%; height:400px;"></div>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th>Is correct</th>
      <th>Number Students Select</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        
        <td><%= answer.answer_text %></td>
        <td><%= answer.is_correct %></td>
        <td><%= answer.number_students_selected %></td>
      </tr>
    <% end %>
  </tbody>
</table>

